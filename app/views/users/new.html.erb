<!doctype html>
<html>
    <head>
        <div class="jumbotron">
         <center>
          <h1><span class="glyphicon glyphicon-home"></span> Blog </h1>  
          <a href="http://localhost:3000/posts" class="right btn btn-primary .active"><span class="glyphicon glyphicon-home"></span> ホーム</a>
          <a href="http://localhost:3000/posts/new" class="right btn btn-primary .active" role="button"><span class="glyphicon glyphicon-pencil"></span> 投稿する</a>
          <a href="http://localhost:3000/signup" class="right btn btn-primary .active" disabled="disabled" role="button"><span class="glyphicon glyphicon-user"></span> 書く人の追加</a>
          <a href="http://localhost:3000/users/" class="right btn btn-primary .active" role="button"><span class="glyphicon glyphicon-user"></span> 一覧</a>
          </center>
        </div>
    </head>

<h2><span class="glyphicon glyphicon-user"></span> 新しい書き手を追加する</h2>

<div class="row jumbotron">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class: 'form-control' %><br>

      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %><br>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: 'form-control' %><br>

      <%= f.label :password_confirmation, "パスワードの確認" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br>

      <%= f.submit "ユーザーの作成", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>